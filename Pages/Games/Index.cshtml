@page
@model TicTacToeServer.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblGames[0].PlayerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGames[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGames[0].Winner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGames[0].PlayerShape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGames[0].ServerShape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGames[0].PlayerColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGames[0].ServerColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGames[0].NumberOfMoves)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblGames) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Winner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerShape)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServerShape)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServerColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfMoves)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
