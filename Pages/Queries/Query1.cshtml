@page
@model TicTacToeServer.Pages.Players.Query1Model

@{
    ViewData["Title"] = "Index";
}

<h1>Players Details</h1> <br> <br>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblPlayers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
        </tr>
}
    </tbody>
</table>
