@page
@model TicTacToeServer.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Players</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblPlayers[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblPlayers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
